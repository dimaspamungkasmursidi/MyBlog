---
import PageLayout from '@/layouts/BaseLayout.astro'
import Button from '@/components/Button.astro'
---

<PageLayout meta={{ title: 'Home' }}>
  <div class='w-full p-6'>
    <Button title='Back' href='/' style='button'>
      <svg
        xmlns='http://www.w3.org/2000/svg'
        width='14'
        height='14'
        viewBox='0 0 24 24'
        slot='icon-before'
      >
        <path
          fill='currentColor'
          d='m6.921 12.5l5.792 5.792L12 19l-7-7l7-7l.713.708L6.921 11.5H19v1z'
        ></path>
      </svg>
    </Button>

    <section class="flex flex-col mt-10">
      <div class="max-w-2xl w-full rounded-lg">
        <h1 class="text-3xl font-bold mb-4">Support My Work</h1>
        <p class="text-lg mb-6">
          If you find my content helpful and would like to support my work, you can make a donation through Trakteer. Your support is greatly appreciated and helps me to keep creating valuable content.
        </p>
      </div>
      <div id="trakteer-button-container"></div>
    </section>

    <script type="text/javascript" src="https://cdn.trakteer.id/js/embed/trbtn.min.js?date=18-11-2023"></script>
    <script type="text/javascript">
      (function(){
        var trbtnId=trbtn.init('Support me on Trakteer','#be1e2d','https://trakteer.id/dimaspamungkas','https://cdn.trakteer.id/images/embed/trbtn-icon.png?date=18-11-2023','40');
        trbtn.draw(trbtnId);
      })();
    </script>
  </div>
</PageLayout>
